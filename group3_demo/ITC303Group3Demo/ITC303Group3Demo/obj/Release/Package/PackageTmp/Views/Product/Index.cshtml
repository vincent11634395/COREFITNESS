@model IEnumerable<ITC303Group3Demo.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Product Display</h2>

<table>
    <tr>
        <th>Product ID</th>
        <th>Product Name</th>
        <th>Product Description</th>
        <th>Product Price</th>
        <th>Product Availability</th>
        <th>Product Image</th>
    </tr>
    @foreach(ITC303Group3Demo.Models.Product details in Model)
    {
        <tr>
            <td>@details.idProduct</td>
            <td>@details.productName</td>
            <td>@details.productDesc</td>
            <td>$@details.productPrice</td>
            <td>@details.productAvailability</td>
            <td>@details.productImg</td>
        </tr>
    }

</table>


